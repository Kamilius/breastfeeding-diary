<Page loaded="onPageLoaded"
      unloaded="navigatedFrom">
  <Page.actionBar>
    <ActionBar text=" ">
      <NavigationButton text="< Назад"
                        tap="goBack"/>
      <ActionBar.actionItems>
        <ActionItem text="Зупинити"
                    tap="stopTimer"
                    ios.position="right"/>
        <ActionItem text="Продовжити"
                    tap="startTimer"
                    ios.position="right"/>
        <ActionItem text="Зберегти"
                    tap="saveEntryToEntriesFile"
                    ios.position="right"/>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>

  <StackLayout>
    <Label text="{{ feedingMinutes | formatTime(feedingSeconds) }}"
           cssClass="timer"/>

    <Label text="Попісяв"/>
    <Switch checked="{{ pee }}"
            cssClass="entry--pee"/>

    <Label text="Покакав"/>
    <Switch checked="{{ poo }}"
            cssClass="entry--poo"/>

    <Label text="Як їв?"/>
    <ListPicker cssClass="entry--method"
                selectedIndex="{{ feedingMethod }}"
                items="{{ ['Груди(л)', 'Груди(п)', 'Пляшечка'] }}"/>
  </StackLayout>
</Page>
