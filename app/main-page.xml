<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onPageLoaded">
  <GridLayout rows="auto, *">
    <StackLayout>
      <Button text="Додати" tap="addFeeding"></Button>
    </StackLayout>
    <ListView items="{{ entries }}" row="1" cssClass="entry-list">
      <ListView.itemTemplate cssClass="entry-list__item">
        <StackLayout orientation="horizontal">
          <Label cssClass="entry-list__item__col entry-list__item__col--start-time"
                 text="{{ startTime | timeFormatter() }}"></Label>
          <Label cssClass="entry-list__item__col entry-list__item__col--pee"
                 text="{{ pee | boolFormatter('попісяв') }}"></Label>
          <Label cssClass="entry-list__item__col entry-list__item__col--poo"
                 text="{{ poo | boolFormatter('покакав') }}"></Label>
          <Label cssClass="entry-list__item__col entry-list__item__col--method"
                 text="{{ feedingMethod | feedingMethodFormatter() }}"></Label>
          <Label cssClass="entry-list__item__col entry-list__item__col--amount"
                 text="{{ feedingAmount | feedingAmountFormatter(feedingMethod) }}"></Label>
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>
    <StackLayout row="2" orientation="horizontal">
      <Label cssClass="entry-list__item__col entry-list__item__col--start-time"
             text="{{ formattedStartTime }}"></Label>
      <Switch cssClass="entry-list__item__col entry-list__item__col--start-time"></Switch>
      <Switch cssClass="entry-list__item__col entry-list__item__col--start-time"></Switch>
      <ListPicker cssClass="entry-list__item__col entry-list__item__col--start-time"
                  items="{{ ['Груди(л)', 'Груди(п)', 'Пляшечка'] }}"></ListPicker>
      <Label cssClass="entry-list__item__col entry-list__item__col--start-time"
             text="{{ 0 }}"></Label>
    </StackLayout>
  </GridLayout>
</Page>
